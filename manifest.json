{
  "name"             : "Insanitizer",
  "manifest_version" : 2,
  "description"      : "Replace text in webpages for lulz; Inspired by http://xkcd.com/1288/",
  "homepage_url"     : "https://github.com/akshat1/insanitizer",
  "version"          : "1.0",
  "icons": {
      "128" : "icon_128.png",
      "32"  : "icon_32.png"
   },
  "permissions" : [
    "tabs", "http://*/*"
  ],
  "content_scripts" : [
    {
      "matches" : ["http://*/*"],
      "js"      : ["insanitizer.js"],
      "run_at"  : "document_end"
    }
  ]
}